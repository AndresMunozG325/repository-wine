<% if current_user %>
    <p>Hola <%= @user.email %></p>
    <p id="notice"><%= notice %></p>

    <h1>Wines</h1>

    <table>
    <thead>
        <tr>
        <th>Name</th>
        <th>Strains</th>
        
        <th colspan="3"></th>
        </tr>
    </thead>

    <tbody>
        <% @wines.each do |wine| %>
        <tr>
            <td><%= wine.name %></td>
            <td>
            <% wine.wine_strains.each do |strain| %>
                <li><%= strain.strain.name %> <%= "(#{strain.percentage} %)" %></li>

            <%end%>
            </td>
            <% if @user.user=="admin" %>
                <td><%= link_to 'Show', wine %></td>
                <td><%= link_to 'Edit', edit_wine_path(wine) %></td>
                <td><%= link_to 'Destroy', wine, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            <% end %>        
        </tr>
        <% end %>
    </tbody>
    </table>

    <br>
    <% if @user.user=="admin" %>
        <%= link_to 'New Wine', new_wine_path %>
    <% end %>

<% else %>
    <h2>Par ver lista de vinos debe estar logeado</h2>
<% end %>